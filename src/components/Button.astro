---
const {href, newTab, id} = Astro.props

const Tag = href ? 'a' : 'button'
---

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    background: linear-gradient(135deg, var(--mint) 0%, var(--sky) 100%);
    color: var(--primary);
    border: 2px solid transparent;
    transition: all 0.3s ease;
    border-radius: 2rem;
    white-space: nowrap;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(192, 253, 251, 0.3);
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(192, 253, 251, 0.4);
  }
</style>

<Tag href={href} class="btn" id={id} target={newTab ? `_blank` : undefined} rel={newTab ? `noopener noreferrer` : undefined}>
  <slot></slot>
</Tag>