---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import SignupForm from '../components/SignupForm.astro';
import ParticleBackground from '../components/ParticleBackground.astro';

const seo = {
  title: 'PeerPen | Write together. Get in alone.',
  description: 'The social feedback platform for college essays. Built by students, for students.',
}
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    text-align: center;
    margin-top: -2rem;
  }
</style>

<Layout seo={seo}>
  <ParticleBackground />
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in gradient-text">Write together. Get in alone.</h1>
      <p class="fade-in slide-up">The social feedback platform for college essays. Built by students, for students.</p>
      <SignupForm />
    </article>
  </Container>
</Layout>

