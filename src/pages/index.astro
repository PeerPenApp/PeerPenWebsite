---
import Layout from '../layouts/Page.astro';
---

<Layout>
  <div class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
    <h1 class="text-4xl font-bold mb-6">Welcome to PeerPen</h1>
    <p class="text-lg mb-8 max-w-2xl">Your AI-powered writing assistant for academic essays and research papers.</p>
    <div class="flex flex-col sm:flex-row gap-4">
      <a href="/login" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors">
        Sign In
      </a>
      <a href="/signup" class="bg-white hover:bg-gray-100 text-gray-800 font-medium py-3 px-6 rounded-lg border border-gray-300 transition-colors">
        Create Account
      </a>
    </div>
  </div>
</Layout>

<style>
  /* Hide Clerk branding */
  :global(.cl-footerAction) {
    display: none !important;
  }
</style>
